<% layout('layouts/boilerplate')%>
<h1><%= project.title%></h1>

<div class="row">
    <div class="col-md-8">
        <div id="projectCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <% project.images.forEach((img, i) => {  %>
                <div class="carousel-item <%= i === 0 ? 'active' : ''%>">
                    <img src="<%= img.url%>" class="d-block w-100" alt="">
                </div>
                <% }) %>

            </div>
            <% if(project.images.length > 1) {%>
            <a class="carousel-control-prev" href="#projectCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#projectCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
            <% } %>
</div>
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title"><%= project.title%></h5>
<div class="text-and-button">  
                <p> <a class="btn btn-danger"  href="<%= encodeURI(project.linkDemo) %>" target="_blank">Demo</a></p>
                <p> <a class="btn btn-danger" href="<%= encodeURI(project.linkGitHub) %>" target="_blank">GitHub</a></p>
           </div>     
                <p class="card-text">
                    <%= project.description%></p>
            <p class="card-text">
                <%= project.location%></p>
                    <p class="card-text">
                        Submitted by <%= project.author.username%></p>
                    <p class="card-text">
                        <%= project.tags%></p>
                    </div>

            <%  if( currentUser && project.author.equals(currentUser._id))  {%>
            <div class="card-body">
                <a class="card-link btn btn-info" href="/projects/<%=project._id%>/edit">Edit</a>
                <form class="d-inline" action="/projects/<%=project._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-warning">Delete</button>
                </form>
            </div>
            <% } %>
            <div class="card-footer">
                <%= project.dateVisited%>
            </div>
        </div>

    </div>
 <div class="col-md-4">
 <h2>Technologies</h2>  
 <p class="card-text">
    <%= project.tags%></p> 
 </div>
</div>
</div>

<script>
    const project = <%- JSON.stringify(project) %>
</script>

