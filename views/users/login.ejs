<% layout('layouts/boilerplate')%>
<body>
   
    <div class="container d-flex justify-content-center align-items-center mt-2">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow ">
                <img src="/images/imgcontact.png" alt="" class="card-img-top" />

                    <h5 class="card-title text-center my-1">Login</h5>
                    <form action="/login" method="POST" class="validated-form" novalidate style="padding-left: 10px; padding-right: 10px;">
                        <div class="mb-4">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" autofocus required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <button class="btn btn-secondary btn-block mx-auto">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
